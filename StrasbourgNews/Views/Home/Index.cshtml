                    <div class="col-md-6">
                        <!-- Post Item Start -->
     


                        <div class="post--item post--layout-1 post--title-larger">
                            <div class="post--img">
                                <a href="/Home/NewsDetail?Id=@Model.Item1[0].Id" class="thumb"><img src="https://www.ditibstrasbourg.fr/@Model.Item1[0].Image.Remove(0,13)" style="width: 1200px; height: 490px ;"></a>



