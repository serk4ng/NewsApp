                                    <ul class="nav meta">

                                        <li><a href="#.">@Model.Item1[0].CreationDate</a></li>
                                    </ul>

                                    <div class="title">
                                        <h2 class="h4"><a href="/Home/NewsDetail?Id=@Model.Item1[0].Id" class="btn-link">@Model.Item1[0].Title</a></h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Post Item End -->
                    </div>

                    <div class="col-md-6">
                        <div class="row gutter--15">
                            <div class="col-xs-6 col-xss-12">
                                <!-- Post Item Start -->
                                <div class="post--item post--layout-1 post--title-large">
