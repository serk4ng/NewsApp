                                            </div>
                                        </div>
                                        <!-- Post Item End -->
                                    </li>
                                </ul>

                                <!-- Preloader Start -->
                                <div class="preloader bg--color-0--b" data-preloader="1">
                                    <div class="preloader--inner"></div>
                                </div>
                                <!-- Preloader End -->
                            </div>
                            <!-- Post Items End -->
                        </div>
                        <!-- World News End -->
       
                    </div>
                </div>
            </div>
            <!-- Main Content End -->
            <!-- Main Sidebar Start -->
            <div class="main--sidebar col-md-4 col-sm-5 ptop--30 pbottom--30" data-sticky-content="true">
                <div class="sticky-content-inner">




                    <!-- Widget Start -->
                    <div class="widget">
                        <div class="widget--title">
                            <h2 class="h4">Bİzden Haber Alın </h2>
                            <i class="icon fa fa-envelope-open-o"></i>
                        </div>

                        <!-- Subscribe Widget Start -->
                        <div class="subscribe--widget">


                            @using (Html.BeginForm("SubscriberSave", "Home", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data", style = "width:100%" }))
                            {
                                <div class="input-group">
                                    <input type="email" name="Email" placeholder="E-mail " class="form-control" autocomplete="off" required>

                                    <div class="input-group-btn">
                                        <button type="submit" class="btn btn-lg btn-default active"><i class="fa fa-paper-plane-o"></i></button>
                                    </div>
                                </div>


                            }
                        </div>
                        <!-- Subscribe Widget End -->
                    </div>
                    <!-- Widget End -->
                    <!-- Widget Start -->
                    <div class="widget">
                        <div class="widget--title">
                            <h2 class="h4">Hutbeler</h2>
                            <i class="icon fa fa-newspaper-o"></i>
                        </div>

                        <!-- List Widgets Start -->
                        <div class="list--widget list--widget-1">
                       

                            <!-- Post Items Start -->
                            <!-- Post Items End -->
                            <!-- Post Items Start -->
                            <div class="post--items post--items-3" data-ajax-content="outer">
                                <ul class="nav" data-ajax-content="inner">

                                    @foreach (var item in Model.Item3)
                                    {
                                        <li>
                                            <!-- Post Item Start -->
                                            <div class="post--item post--layout-3">
                                                <div class="post--img">
                                                    <a href="Sermon/SermonDetail?id=@item.Id" class="thumb"><img src="https://www.ditibstrasbourg.fr/@item.Image.Remove(0,13)" alt=""></a>

                                                    <div class="post--info">
                                                        <ul class="nav meta">
                                                            <li><a href="#.">@item.CreationDate</a></li>
                                                        </ul>

                                                        <div class="title">
                                                            <h3 class="h4"><a href="Sermon/SermonDetail?id=@item.Id" class="btn-link">@item.Title</a></h3>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- Post Item End -->
                                        </li>
                                    }

                                </ul>
                                <a href="/Sermon/Index" style="text-align:center;font-size:16px;font-weight:bold;display:block;">Tüm Hutbeler</a><br/>
