            <div class="main--content col-md-8 col-sm-7" data-sticky-content="true">
                <div class="sticky-content-inner">
                    <div class="row">
                        <!-- World News Start -->
                        <div class="col-md-12 ptop--30 pbottom--30">
                            <!-- Post Items Title Start -->
                            <div class="post--items-title" data-ajax="tab">
                                <h2 class="h4">                          
                                    @Model.Item2[Int32.Parse(Session["cat1"].ToString()),0].Category                        
                                </h2>

                                <div class="nav">
                                    <a href="/Home/CatPrev" class="prev btn-link">
                                        <i class="fa fa-long-arrow-left"></i>
                                    </a>

                                    <span class="divider">/</span>

                                    <a href="/Home/CatNext" class="next btn-link">
                                        <i class="fa fa-long-arrow-right"></i>
                                    </a>
                                </div>
                            </div>
                            <!-- Post Items Title End -->
                            <!-- Post Items Start -->
                            <div class="post--items post--items-2" data-ajax-content="outer">
                                <ul class="nav row gutter--15" data-ajax-content="inner">
                                    <li class="col-xs-12">
                                        <!-- Post Item Start -->
                                        <div class="post--item post--layout-1">
                                            <div class="post--img">
                                                <a href="/Home/NewsDetail?Id=@Model.Item2[Int32.Parse(Session["cat1"].ToString()),0].Id" class="thumb"><img src="https://www.ditibstrasbourg.fr/@Model.Item2[Int32.Parse(Session["cat1"].ToString()),0].Image.Remove(0,13)" alt=""></a>
                                                <div class="post--info">
                                                    <ul class="nav meta">
                                                        <li><a href="#.">@Model.Item2[Int32.Parse(Session["cat1"].ToString()), 0].CreationDate</a></li>
                                                    </ul>

                                                    <div class="title">
                                                        <h3 class="h4"><a href="/Home/NewsDetail?Id=@Model.Item2[Int32.Parse(Session["cat1"].ToString()),0].Id" class="btn-link">@Model.Item2[Int32.Parse(Session["cat1"].ToString()), 0].Title</a></h3>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- Post Item End -->
                                    </li>
                                    <li class="col-xs-12">
                                        <!-- Divider Start -->
                                        <hr class="divider">
                                        <!-- Divider End -->
                                    </li>
                                    <li class="col-xs-6">
                                        <!-- Post Item Start -->
                                        <div class="post--item post--layout-2">
                                            <div class="post--img">
                                                <a href="/Home/NewsDetail?Id=@Model.Item2[Int32.Parse(Session["cat1"].ToString()),1].Id" class="thumb"><img src="https://www.ditibstrasbourg.fr/@Model.Item2[Int32.Parse(Session["cat1"].ToString()),1].Image.Remove(0,13)" alt=""></a>
                                                <div class="post--info">
                                                    <ul class="nav meta">
                                                        <li><a href="#.">@Model.Item2[Int32.Parse(Session["cat1"].ToString()), 1].CreationDate</a></li>
                                                    </ul>

                                                    <div class="title">
                                                        <h3 class="h4"><a href="/Home/NewsDetail?Id=@Model.Item2[Int32.Parse(Session["cat1"].ToString()),1].Id" class="btn-link">@Model.Item2[Int32.Parse(Session["cat1"].ToString()), 1].Title</a></h3>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- Post Item End -->
                                    </li>
                                    <li class="col-xs-6">
                                        <!-- Post Item Start -->
                                        <div class="post--item post--layout-2">
                                            <div class="post--img">
                                                <a href="/Home/NewsDetail?Id=@Model.Item2[Int32.Parse(Session["cat1"].ToString()),2].Id" class="thumb"><img src="https://www.ditibstrasbourg.fr/@Model.Item2[Int32.Parse(Session["cat1"].ToString()),2].Image.Remove(0,13)" alt=""></a>

